{
    "name": "vscode-lfe-workbench",
    "displayName": "VSCode LFE Workbench",
    "description": "This VSCode extension support syntax highlighting and snippets for LFE",
    "version": "0.0.16",
    "publisher": "prokopiy",
    "engines": {
        "vscode": "^1.47.0"
    },
	"activationEvents": [
		"onLanguage:lfe"
	],
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "main": "./client/src/extension.ts",
    "contributes": {
        "languages": [{
            "id": "lfe",
            "aliases": ["LFE", "lfe", "LISP", "lisp", "Lisp Flavoured Erlang"],
            "extensions": [".lfe", ".lfescript"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "lfe",
            "scopeName": "source.lfe",
            "path": "./syntaxes/lfe.tmLanguage.json"
        }],
        "snippets": [{
			"language": "lfe",
            "path": "./snippets/lfe.json"
        }],
        "configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}

    },
    "repository": {
        "type": "git",
        "url": "https://github.com/prokopiy/vscode-lfe-workbench.git"
    },
    "bugs": {
        "url": "https://github.com/prokopiy/vscode-lfe-workbench/issues"
    },
    "homepage": "https://github.com/prokopiy/vscode-lfe-workbench/blob/master/README.md"
}